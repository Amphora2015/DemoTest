<ivy-module version="2.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    <info organisation="sempra.confirm" module="OpsTrackingTradeAlert"/>
    <configurations>
        <conf name="default" visibility="public" description="runtime dependencies and master artifact can be used with this conf" extends="runtime,master"/>
        <conf name="master" visibility="public" description="contains only the artifact published by this module itself, with no transitive dependencies"/>
        <conf name="compile" visibility="public" description="this is the default scope, used if none is specified. Compile dependencies are available in all classpaths."/>
        <conf name="runtime" visibility="public" description="this scope indicates that the dependency is not required for compilation, but is for execution. It is in the runtime and test classpaths, but not the compile classpath." />
        <conf name="test" visibility="private" description="this scope indicates that the dependency is not required for normal use of the application, and is only available for the test compilation and execution phases." extends="runtime"/>
        <conf name="sources" visibility="public" description="this configuration contains the source artifact of this module, if any."/>
        <conf name="api" visibility="public" description="this configuration contains the javadoc artifacts."/>
    </configurations>

    <dependencies>
        
        <dependency org="sempra.srm" name="jboss" rev="4.2.0.GA" conf="compile->default">
            <artifact name="jbossall-client"/>
        </dependency>
        <dependency org="commons-logging" name="commons-logging" rev="+"
                    conf="compile->default" transitive="false"/>
        <dependency org="commons-logging" name="commons-logging" rev="+"
                    conf="compile->default" transitive="false"/>
        <dependency org="javax.activation" name="activation" rev="+"
                    conf="compile->default" transitive="false"/>

        <dependency org="jdom" name="jdom" rev="1.0beta9"
                    conf="compile->default"/>

        <dependency org="javax.mail" name="mail" rev="+"
                    conf="compile->default" transitive="false"/>

        <dependency org="oracle" name="jdbc" rev="+"
                    conf="compile->default" transitive="false">
            <artifact name="ojdbc14" />
        </dependency>

        <dependency org="sun" name="jdbc" rev="+"
                    conf="compile->default" transitive="false">
            <artifact name="rowset" />
        </dependency>

        <dependency org="apache" name="commons-httpclient" rev="+"
                    conf="compile->default" transitive="false">
            <artifact name="commons-httpclient" />
        </dependency>

        <dependency org="sempra" name="sempra-common-utils" rev="+"
                    conf="compile->default" transitive="false">
            <artifact name="SempraCommonUtil_J" />
        </dependency>

        <dependency org="sempra" name="legacy" rev="0.0" conf="compile->default">
            <artifact name="utils" />
            <artifact name="DbInfoService" />
        </dependency>
        
        <dependency org="jboss" name="client" rev="+" conf="compile->default">
            <artifact name="jboss-system" />
        </dependency>


    </dependencies>

    <conflicts>
        <manager org="oracle" module="ojdbc14" rev="10.2.0.3.0" />
        <manager name="latest-revision" />
    </conflicts>
</ivy-module>
