<?xml version="1.0" ?> 
 <jboss xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss_5_0.xsd" version="3.0">
 	<enterprise-beans>
 		<session>
 			<ejb-name>ConfirmWebWrapper</ejb-name>
 			<pool-config>
 				<pool-class>org.jboss.as.ejb3.pool.strictmax.StrictMaxPool</pool-class>
 				<pool-max-size>10</pool-max-size>
 				<pool-timeout>120000</pool-timeout>
 			</pool-config>
 		</session>
 		<session>
 			<ejb-name>ConfirmUtilWebWrapper</ejb-name>
 			<pool-config>
                <pool-class>org.jboss.as.ejb3.pool.strictmax.StrictMaxPool</pool-class>
 				<pool-max-size>5</pool-max-size>
 				<pool-timeout>60000</pool-timeout>
 			</pool-config>
 		</session>
 	</enterprise-beans>
 </jboss>
 