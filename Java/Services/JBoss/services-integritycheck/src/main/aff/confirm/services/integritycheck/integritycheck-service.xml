<server>
  <classpath codebase="deploy" archives="IntegrityCheckService.jar"/>
  <mbean code="aff.confirm.services.integritycheck.IntegrityCheckService"
         name="sempra.utils:service=IntegrityCheckService">
    <depends>jboss.jca:service=RARDeployer</depends>
    <depends>sempra.utils:service=MailNotifier</depends>
    <attribute name="TimerPeriod" type="java.lang.Integer" read="true" write="true">360000</attribute>
    <attribute name="DbInfoName" type="java.lang.String" read="true" write="true">DBInfo</attribute>
    <attribute name="MonitorQueries">
        <queries>
              <query name="TradeLoqQuery.txt" treshhold = "3"></query>
              <query name="OpsTrackingQuery.txt" treshhold = "3"></query>
              <query name="JmsDealsheetQuery.txt" treshhold = "3"></query>
        </queries>
	 </attribute>
  </mbean>
</server>

