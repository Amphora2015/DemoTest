<ivy-module version="2.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

    <info organisation="cnf" module="cnf-TradeGateway"/>

    <configurations>
        <include file="${project.basedir}/ivy-configurations.xml"/>
    </configurations>

    <publications>
        <artifact type="war" conf="master"/>
    </publications>

    <dependencies defaultconf="default">
        <dependency org="commons-httpclient" name="commons-httpclient" rev="3.1"/>

        <dependency org="javax.xml" name="jaxrpc-api" rev="1.1">
            <artifact name="jaxrpc-api" type="jar"/>
        </dependency>
        <dependency org="org.apache.axis" name="axis" rev="1.4">
            <artifact name="axis" type="jar"/>
        </dependency>
        <dependency org="org.apache.commons" name="com.springsource.org.apache.commons.discovery" rev="0.4.0" conf="*->provided">
            <artifact name="com.springsource.org.apache.commons.discovery" type="jar"/>
        </dependency>
        <dependency org="apache" name="axis-wsdl4j" rev="1.5.1">
            <artifact name="wsdl4j" type="jar"/>
        </dependency>

        <dependency org="com.oracle" name="ojdbc6" rev="11.2.0.2.0"/>

        <dependency org="com.jboss" name="jboss-logging" rev="3.1.2"/>
        <dependency org="com.jboss" name="hibernate-core" rev="4.1.3"/>
        <dependency org="com.jboss" name="hibernate-jpa-2.0-api" rev="1.0.1"/>
        <dependency org="com.jboss" name="jboss-jaxrs-api" rev="1.1"/>
        <dependency org="com.jboss" name="jboss-servlet-api" rev="3.0"/>

    </dependencies>

</ivy-module>
